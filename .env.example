# Snowflake Configuration
SNOWFLAKE_ACCOUNT=your-account.region.snowflakecomputing.com
SNOWFLAKE_USER=your-user
SNOWFLAKE_PASSWORD=your-password
SNOWFLAKE_WAREHOUSE=your-warehouse
SNOWFLAKE_DATABASE=your-database
SNOWFLAKE_SCHEMA=PUBLIC

# LLM Configuration - Triple support (Groq + Gemini + Ollama)
# Groq (use with Llama)
GROQ_API_KEY=your-groq-api-key
MODEL_NAME=llama-3.3-70b-versatile

# Google Gemini (use with Gemini Pro)
GOOGLE_API_KEY=your-google-api-key
GEMINI_MODEL=gemini-1.5-flash

# Ollama (local model)
OLLAMA_BASE_URL=http://192.168.0.100:11434
OLLAMA_MODEL=codellama:7b-instruct

# LLM Provider (auto, groq, gemini, ollama)
LLM_PROVIDER=gemini

# Application Configuration
DEBUG=False

# Prompt Configuration (optional - for advanced customization)
# SQL_PROMPT_FILE=custom_prompt.txt
# DOMAIN_CONTEXT=real_estate
# PROMPT_STYLE=detailed
